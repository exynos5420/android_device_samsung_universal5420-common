# hal_power_default.te

allow hal_power_default {
    sysfs_backlight_writable
    sysfs_batteryinfo
    sysfs_devices_system_cpu
    sysfs_interactive_writable
    sysfs_homebutton_writable
    sysfs_muic
    sysfs_power_writable
    sysfs_sec_touchkey
    sysfs_touchscreen_writable
}:dir r_dir_perms;

allow hal_power_default {
    sysfs_backlight_writable
    sysfs_batteryinfo
    sysfs_input
    sysfs_muic
    sysfs_sec_touchkey
}:file r_file_perms;

allow hal_power_default {
    sysfs_devices_system_cpu
    sysfs_homebutton_writable
    sysfs_interactive_writable
    sysfs_sec_touchkey
    sysfs_touchscreen_writable
}:file rw_file_perms;

allow hal_power_default sysfs_input:lnk_file read;
allow hal_power_default sysfs:file rw_file_perms;
allow hal_power_default sysfs:dir r_dir_perms;
